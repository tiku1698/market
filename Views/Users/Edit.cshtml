@model DeliveryMarketplace.Models.User

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Details</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Edit User Details</h4>
    <hr />
